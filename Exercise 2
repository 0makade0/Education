using System;

namespace Languages2
{
    class Program
    {
        static void Main(string[] args)
        {
        m1: var rand = new Random();
            int matrixSize;
            //ВВод данных
            while (true)
            {
                Console.WriteLine("Вв-те размерность матрицы: ");
                try
                {
                    matrixSize = Convert.ToInt32(Console.ReadLine());
                    if (matrixSize < 2)
                    {
                        throw new FormatException("Введён размер матрицы меньше двух. Повторите попытку.");
                    }
                    break;
                }
                catch (FormatException ex)
                {
                    Console.WriteLine($"{ex.Message} Размерность матрицы должна быть больше 2");
                }
            }
            //Создание и заполнение массива 
            int[,] Matrix;
            Matrix = new int[matrixSize, matrixSize];
            for (int i = 0; i < matrixSize; i++)
            {
                for (int j = 0; j < matrixSize; j++)
                {
                    Matrix[i, j] = rand.Next(0, 100);
                }
            }
            int clmin = Matrix[0, 0]; //Минимальный элемент в столбце
            int strmin = Matrix[0, 0]; //Минимальный элемент в строке
            int clmax = Matrix[0, 0]; //Максимальный жлемент в столбцe
            int strmax = Matrix[0, 0]; //Максимальный элемент в строке
            //Нахождение седловой точки
            for (int i = 0; i < matrixSize; i++)
            {
                for (int j = 1; j < matrixSize; j++)
                {
                    if (Matrix[i, j] < Matrix[0, 0])
                        strmin = j;
                    if (Matrix[i, j] > Matrix[0, 0])
                        strmax = j;
                    if (Matrix[j, i] < Matrix[0, 0])
                        clmin = Matrix[j, i];
                    if (Matrix[j, i] > Matrix[0, 0])
                        clmax = Matrix[j, i];
                }
                
            }
            //Вывод матрицы
            for (int i = 0; i < matrixSize; i++)
            {
                for (int j = 0; j < matrixSize; j++)
                {
                    Console.Write(Matrix[i, j] + " ");
                }
                Console.WriteLine();
            }
            Console.WriteLine("Хотите повторить? 1-да; любая другая кнопка - нет");
            int c = Convert.ToInt32(Console.ReadLine());
            if (c == 1)
            {
                Console.Clear();
                goto m1;
            }
            return;
        }
    }
}
